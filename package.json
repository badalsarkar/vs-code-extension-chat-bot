{
  "name": "my-vscode-chatbot",
  "displayName": "My Chatbot",
  "description": "A simple VS Code chatbot extension",
  "version": "0.0.1",
  "publisher": "your-name",
  "engines": {
    "vscode": "^1.50.0"
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -w -p ./",
    "package": "npx vsce package"
  },
  "devDependencies": {
    "typescript": "^4.0.0",
    "vsce": "^2.3.0",
    "yo": "^4.0.0",
    "generator-code": "^1.4.0"
  },
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.openChatBot",
        "title": "Open ChatBot"
      }
    ]
  }
}
